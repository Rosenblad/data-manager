{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "lib",
    "lib": ["dom", "es2015"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "scripts"],
  "exclude": ["**/*.test.tsx"]
}
