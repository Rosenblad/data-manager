{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@data-manager/*": ["./packages/*"]
    },
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "outDir": "lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["examples"],
  "exclude": ["node_modules", "**/*.test.tsx", "test/"]
}
